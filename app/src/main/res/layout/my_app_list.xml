<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:padding="5dp"
              android:background="@drawable/app_item_click_effect"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent" android:layout_height="45dp" android:orientation="horizontal">
        <ImageView android:id="@+id/app_icon" android:layout_width="40dp" android:layout_height="match_parent" android:src="@drawable/feb" android:layout_marginRight="5dp"/>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
            <TextView android:id="@+id/appitem"
                      android:textSize="18dp"
                      android:textColor="@color/dark"
                      android:text="@string/app_name"
                      android:layout_width="match_parent"
                      android:layout_height="25dp"/>

            <TextView android:id="@+id/app_hint"
                      android:textSize="15dp"
                      android:textColor="@android:color/darker_gray"
                      android:text="@string/app_name"
                      android:layout_width="match_parent"
                      android:layout_height="20dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>